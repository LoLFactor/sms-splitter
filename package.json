{
  "name": "@loltech/sms-splitter",
  "version": "1.0.0",
  "description": "Typescript library for splitting strings into SMS messages according to GSM-7 or UCS-2.",
  "keywords": [
    "SMS",
    "split",
    "splitter",
    "GSM-7",
    "UCS-2"
  ],
  "files": [
    "/lib/**/*"
  ],
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "author": {
    "name": "Vlad Pascu"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^27.0.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4"
  },
  "jest": {
    "rootDir": "src",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageReporters": [
      "cobertura",
      "text"
    ]
  }
}
